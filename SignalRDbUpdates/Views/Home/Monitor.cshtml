@model IEnumerable<SignalRDbUpdates.Models.Messages>
@{
    ViewBag.Title = "Monitor";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div id="messagesTableMonitor"></div>
    </div>
</div>
    
@section Scripts{
    <script src="/Scripts/jquery.signalR-2.1.1.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <script type="text/javascript">
    $(function () {
        // Declare a proxy to reference the hub.
        var notifications = $.connection.messagesHub;

        //debugger;
        // Create a function that the hub can call to broadcast messages.
        notifications.client.updateMessages = function () {
            debugger;
            getAllMessagesMonitor()

        };
        notifications.client.updateStatus = function (id, msgName) {
            debugger;
            $("#status_" + id + "").html(msgName);
        };
        // Start the connection.
        $.connection.hub.start().done(function () {
            //alert("connection started")
            getAllMessagesMonitor();
        }).fail(function (e) {
            alert(e);
        });
    });


    function getAllMessagesMonitor()
    {
        var tbl = $('#messagesTableMonitor');
        $.ajax({
            url: '/home/MonitorGetAll',
            contentType: 'application/html ; charset:utf-8',
            type: 'GET',
            dataType: 'html'
        }).success(function (result) {
            tbl.empty().append(result);
        }).error(function () {

        });
    }


    </script>
}



